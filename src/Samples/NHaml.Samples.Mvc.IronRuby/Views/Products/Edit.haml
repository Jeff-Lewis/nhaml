%h2= view_data.model.product.ProductName
%form{:action => url.action({:action => 'Update', :id => view_data.model.product.ProductId}), :method => 'post'}
  %table
    %tr
      %td Name:
      %td= html.text_box('ProductName', view_data.model.product.ProductName)
    %tr
      %td Category:
      %td= html.drop_down_list('CategoryID', view_data.model.categories)
    %tr
      %td Supplier:
      %td= html.drop_down_list('SupplierID', view_data.model.suppliers)
    %tr
      %td Unit Price:
      %td= html.text_box('UnitPrice', view_data.model.product.unit_price)
  %p
  _ Shared\Button