%h2= ViewData.Model.Product.ProductName
%form{action=Url.Action("Update", {"ID":ViewData.Model.Product.ProductId}), method="post"}
  %table
    %tr
      %td Name:
      %td= Html.TextBox("ProductName", ViewData.Model.Product.ProductName)
    %tr
      %td Category:
      %td= Html.DropDownList(null,"CategoryID", ViewData.Model.Categories)
    %tr
      %td Supplier:
      %td= Html.DropDownList(null,"SupplierID", ViewData.Model.Suppliers)
    %tr
      %td Unit Price:
      %td= Html.TextBox("UnitPrice", ViewData.Model.Product.UnitPrice.ToString())
  %p
  _ Shared\Button