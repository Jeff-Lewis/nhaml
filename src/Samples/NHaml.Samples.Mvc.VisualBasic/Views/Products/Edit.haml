%h2= ViewData.Model.Product.ProductName
- Dim _action As string  = Url.Action("Update", New With {Key .ID=ViewData.Model.Product.ProductID})
%form{action=_action, method="post"}
  %table
    %tr
      %td Name:
      %td= Html.TextBox("ProductName", ViewData.Model.Product.ProductName)
    %tr
      %td Category:
      %td= Html.DropDownList("CategoryID", ViewData.Model.Categories, CStr(Nothing))
    %tr
      %td Supplier:
      %td= Html.DropDownList("SupplierID", ViewData.Model.Suppliers, CStr(Nothing))
    %tr
      %td Unit Price:
      %td= Html.TextBox("UnitPrice", ViewData.Model.Product.UnitPrice.ToString())
  %p
  - Html.RenderPartial("_Button")